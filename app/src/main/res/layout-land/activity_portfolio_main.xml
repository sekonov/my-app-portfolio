<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#B3E5FC"
    tools:context=".PortfolioMain">

    <TextView android:text="@string/my_nanodegree_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@string/spotify_streamer"
        android:id="@+id/button_project1"
        android:clickable="true"
        android:onClick="displayToast1"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@string/scores_app"
        android:id="@+id/button_project2"
        android:clickable="true"
        android:textStyle="bold"
        android:onClick="displayToast2"
        android:layout_below="@+id/button_project1"
        android:layout_alignLeft="@+id/button_project1"

        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@string/library_app"
        android:id="@+id/button_project3"
        android:clickable="true"
        android:textStyle="bold"
        android:onClick="displayToast3"
        android:layout_below="@+id/button_project2"
        android:layout_alignLeft="@+id/button_project2"

        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@string/build_it_bigger"
        android:id="@+id/button_project4"
        android:clickable="true"
        android:textStyle="bold"
        android:onClick="displayToast4"
        android:layout_above="@+id/button_project5"
        android:layout_toRightOf="@+id/button_project1"
        android:layout_toEndOf="@+id/button_project1"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@string/xyz_reader"
        android:id="@+id/button_project5"
        android:clickable="true"
        android:textStyle="bold"
        android:onClick="displayToast5"
        android:layout_above="@+id/button_project3"
        android:layout_alignLeft="@+id/button_project4"

        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:text="@string/capstone_my_own_app"
        android:id="@+id/button_project6"
        android:clickable="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="displayToast6"
        android:layout_alignTop="@+id/button_project3"
        android:layout_alignLeft="@+id/button_project5"
        />


</RelativeLayout>
